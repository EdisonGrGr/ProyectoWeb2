<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listado de Productos</title>
    
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    
    <link rel="stylesheet" href="/styles/main.css">
    
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Listado de Productos</h1>
        <a href="/products/new" class="btn btn-primary mb-3">Crear Nuevo Producto</a>
        <div class="list-group">
            <% products.forEach(product => { %>
                <div class="list-group-item">
                    <h5 class="mb-1"><strong><%= product.name %></strong></h5>
                    <p class="mb-1">Precio: <%= product.price %> pesos</p>
                    <% if (product.Category) { %>
                        <p class="mb-1">Categoría: <%= product.Category.name %></p>
                    <% } else { %>
                        <p class="mb-1">Categoría: Sin categoría</p>
                    <% } %>
                    <p class="mb-3">Descripción: <%= product.description %></p>
                    <a href="/products/<%= product.id %>/edit" class="btn btn-secondary btn-sm">Editar</a>
                    <form action="/products/<%= product.id %>/delete" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                    </form>
                </div>
            <% }); %>
        </div>
    </div>

    
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    
    <script src="/scripts/main.js"></script>
</body>
</html>
