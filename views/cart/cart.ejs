<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Carrito de Compras</title>
    
    
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    
    
    <link rel="stylesheet" href="/styles/main.css">
    <style>
        .cart-item {
            border: 1px solid #dee2e6;
            border-radius: 5px;
            padding: 15px;
            margin: 10px 0;
        }
        .cart-item h3 {
            font-size: 1.5rem;
        }
        .cart-item p {
            font-size: 1.2rem;
        }
    </style>
</head>
<body>
    <div class="container my-4">
        <h1 class="text-center">Carrito de Compras</h1>
        <ul class="list-group">
            <% if (products.length > 0) { %>
                <% products.forEach(product => { %>
                    <li class="cart-item list-group-item">
                        <h3><%= product.name %></h3>
                        <p><%= product.description %></p>
                        <p>Precio: <%= product.price %> €</p>
                        <p>Cantidad: <%= product.CartItem.quantity %></p>
                        <form action="/cart/remove/<%= product.id %>" method="POST" class="mt-2">
                            <button type="submit" class="btn btn-danger">Eliminar del carrito</button>
                        </form>
                    </li>
                <% }); %>
            <% } else { %>
                <li class="list-group-item text-center">
                    <p class="alert alert-info">Tu carrito está vacío.</p>
                </li>
            <% } %>
        </ul>
        <div class="text-center mt-4">
            <a href="/" class="btn btn-primary">Seguir comprando</a>
        </div>
    </div>

    
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
